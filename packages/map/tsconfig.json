{
    "compilerOptions": {
      "target": "ESNext",
      "strictPropertyInitialization": false,
      "noImplicitAny": false,
      "useDefineForClassFields": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "noEmit": true
    },
    "include": [
        "src/**/*.ts",
      ],
      "exclude": [
        "node_modules"
      ]
}
  